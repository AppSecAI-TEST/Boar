<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/percent"
    android:background="#000000"
    android:orientation="vertical">

    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginTop="33dp"
        android:orientation="vertical"
        app:layout_heightPercent="80%h"
        app:layout_widthPercent="50%w">

        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:background="@mipmap/password_manager_5"
            android:orientation="vertical"
            app:layout_heightPercent="30%h"
            app:layout_widthPercent="100%w">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请输入输入说明书的原始密码"
                android:textColor="#e0e5e5"
                android:textSize="26dp"
                app:layout_marginLeftPercent="4%w"
                app:layout_marginTopPercent="3%w" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="进行权限管理"
                android:textColor="#e0e5e5"
                android:textSize="26dp"
                app:layout_marginLeftPercent="4%w"
                app:layout_marginTopPercent="2%w" />
        </com.zhy.android.percent.support.PercentLinearLayout>

        <com.zhy.android.percent.support.PercentRelativeLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/background_white_7"
            app:layout_heightPercent="70%h"
            app:layout_widthPercent="100%w">


            <EditText
                android:id="@+id/input"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/password_manager_6"
                android:hint="请输入您的手机号码!"
                android:paddingLeft="70dp"
                android:textColorHint="#A9A9A9"
                android:textSize="25dp"
                app:layout_marginLeftPercent="12%w"
                app:layout_marginTopPercent="10%w" />

            <Button
                android:id="@+id/confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/input"
                android:layout_gravity="center"
                android:background="@mipmap/password_manager_7"
                android:text="确认"
                android:textColor="#e0e5e5"
                android:textSize="25dp"
                app:layout_marginLeftPercent="12%w"
                app:layout_marginTopPercent="9%w" />

            <Button
                android:id="@+id/negativeButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/input"
                android:layout_toRightOf="@id/confirm"
                android:background="@mipmap/password_manager_7"
                android:text="返回"
                android:textColor="#e0e5e5"
                android:textSize="25dp"
                app:layout_marginLeftPercent="12%w"
                app:layout_marginTopPercent="9%w" />

        </com.zhy.android.percent.support.PercentRelativeLayout>


    </com.zhy.android.percent.support.PercentLinearLayout>
</com.zhy.android.percent.support.PercentLinearLayout>