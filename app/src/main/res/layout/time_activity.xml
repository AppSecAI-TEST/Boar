<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#078e80"
            android:orientation="horizontal"
            app:layout_heightPercent="11%h"
            app:layout_widthPercent="100%w">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="时间设定"
                android:textColor="#fff"
                app:layout_marginLeftPercent="41%w"
                app:layout_textSizePercent="3%w" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="平台温度:"
                android:textColor="#fff"
                app:layout_marginLeftPercent="28%w"
                app:layout_textSizePercent="2.6%w" />

            <TextView
                android:id="@+id/humidity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="37℃"
                android:textColor="#fff"
                app:layout_marginLeftPercent="1%w"
                app:layout_textSizePercent="2.6%w" />
        </com.zhy.android.percent.support.PercentLinearLayout>

        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#e0f3f1"
            android:orientation="horizontal">

            <com.zhy.android.percent.support.PercentLinearLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:orientation="vertical"
                app:layout_heightPercent="90%h"
                app:layout_marginLeftPercent="5%w"
                app:layout_widthPercent="90%w">

                <com.zhy.android.percent.support.PercentLinearLayout
                    android:id="@+id/date_t"
                    android:layout_width="621dp"
                    android:layout_height="107dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@mipmap/n_010"
                    android:orientation="horizontal"
                    app:layout_marginTopPercent="8%w">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="设置日期"
                        android:textSize="35dp"
                        app:layout_marginLeftPercent="20%w" />

                    <TextView
                        android:id="@+id/date_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="1992/07/03"
                        android:textSize="35dp"
                        app:layout_marginLeftPercent="12%w" />

                </com.zhy.android.percent.support.PercentLinearLayout>

                <com.zhy.android.percent.support.PercentLinearLayout
                    android:id="@+id/time_t"
                    android:layout_width="621dp"
                    android:layout_height="107dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="65dp"
                    android:background="@mipmap/n_011"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="设置时间"
                        android:textSize="35dp"
                        app:layout_marginLeftPercent="20%w" />

                    <TextView
                        android:id="@+id/time_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="12:30"
                        android:textSize="35dp"
                        app:layout_marginLeftPercent="22%w" />

                </com.zhy.android.percent.support.PercentLinearLayout>

            </com.zhy.android.percent.support.PercentLinearLayout>


        </com.zhy.android.percent.support.PercentLinearLayout>

    </com.zhy.android.percent.support.PercentLinearLayout>

    <ImageView
        android:id="@+id/icon_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/a_000"
        app:layout_marginLeftPercent="4%w"
        app:layout_marginTopPercent="1%w" />
</com.zhy.android.percent.support.PercentFrameLayout>

