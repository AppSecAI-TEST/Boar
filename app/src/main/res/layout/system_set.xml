<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#078e80"
            android:orientation="horizontal"
            app:layout_heightPercent="11%h"
            app:layout_widthPercent="100%w">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="设    置"
                android:textColor="#fff"
                app:layout_marginLeftPercent="44%w"
                app:layout_textSizePercent="4%w" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="375dp"
                android:text="平台温度:"
                android:textColor="#fff"
                android:textSize="25dp"
                app:layout_marginLeftPercent="26%" />

            <TextView
                android:id="@+id/humidity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="7dp"
                android:text="37℃"
                android:textColor="#fff"
                android:textSize="25dp" />
        </com.zhy.android.percent.support.PercentLinearLayout>

        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#e0f3f1"
            android:orientation="horizontal"
            app:layout_heightPercent="89%h"
            app:layout_widthPercent="100%w">

            <com.zhy.android.percent.support.PercentLinearLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="vertical"
                app:layout_heightPercent="80%h"
                app:layout_marginLeftPercent="8%w"
                app:layout_marginTopPercent="4%w"
                app:layout_widthPercent="40%w">


                <Button
                    android:id="@+id/time_bu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="55dp"
                    android:background="@mipmap/system_set_6"
                    android:text="时间设定"
                    android:textColor="#fff"
                    android:textSize="30dp" />

                <Button
                    android:id="@+id/wifi_bu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@mipmap/system_set_4"
                    android:text="WIFI设定"
                    android:textColor="#fff"
                    android:textSize="30dp"
                    app:layout_marginTopPercent="6%w" />


                <Button
                    android:id="@+id/brightness_bu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@mipmap/system_set_3"
                    android:text="屏幕亮度"
                    android:textColor="#FFF"
                    android:textSize="32dp"
                    app:layout_marginTopPercent="6%w" />


            </com.zhy.android.percent.support.PercentLinearLayout>

            <com.zhy.android.percent.support.PercentLinearLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="vertical"
                app:layout_heightPercent="80%h"
                app:layout_marginLeftPercent="6%w"
                app:layout_marginTopPercent="4%w"
                app:layout_widthPercent="40%w">


                <Button
                    android:id="@+id/standard_bu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="55dp"
                    android:background="@mipmap/system_set_1"
                    android:text="检测标准"
                    android:textColor="#fff"
                    android:textSize="30dp" />

                <Button
                    android:id="@+id/manage_bu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@mipmap/system_set_5"
                    android:text="密码管理"
                    android:textColor="#fff"
                    android:textSize="30dp"
                    app:layout_marginTopPercent="6%w" />


                <Button
                    android:id="@+id/about_bu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@mipmap/system_set_2"
                    android:text="关     于"
                    android:textColor="#FFF"
                    android:textSize="32dp"
                    app:layout_marginTopPercent="6%w" />


            </com.zhy.android.percent.support.PercentLinearLayout>

        </com.zhy.android.percent.support.PercentLinearLayout>
    </com.zhy.android.percent.support.PercentLinearLayout>

    <ImageView
        android:id="@+id/icon_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/home"
        app:layout_marginLeftPercent="2%w"
        app:layout_marginTopPercent="1%w" />
</com.zhy.android.percent.support.PercentFrameLayout>