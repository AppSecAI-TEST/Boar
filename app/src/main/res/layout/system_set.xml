<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#078e80"
        android:orientation="horizontal"
        app:layout_heightPercent="11%h"
        app:layout_widthPercent="100%w">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="520dp"
            android:text="平台温度:"
            android:textColor="#fff"
            android:textSize="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="390dp"
            android:text="平台温度:"
            android:textColor="#fff"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="7dp"
            android:text="27℃"
            android:textColor="#fff"
            android:textSize="25dp" />
    </com.zhy.android.percent.support.PercentLinearLayout>

    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#e0f3f1"
        android:orientation="vertical">

        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_marginTop="55dp"
            android:background="@drawable/background_1"
            android:orientation="vertical"
            app:layout_heightPercent="80%h"
            app:layout_widthPercent="45%w">


            <Button
                android:id="@+id/affirm1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_marginTop="55dp"
                android:background="@drawable/aa_17"
                android:text="检测参数"
                android:textColor="#fff"
                android:textSize="25dp"
                app:layout_heightPercent="22%h"
                app:layout_widthPercent="78%w" />

            <Button
                android:id="@+id/affirm2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:background="@drawable/aa_17"
                android:text="系统参数"
                android:textColor="#fff"
                android:textSize="25dp"
                app:layout_heightPercent="22%h"
                app:layout_widthPercent="78%w" />


            <Button
                android:id="@+id/affirm3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_marginTop="55dp"
                android:background="@drawable/aa_17"
                android:text="返回"
                android:textColor="#fff"
                android:textSize="25dp"
                app:layout_heightPercent="22%h"
                app:layout_widthPercent="78%w" />


        </com.zhy.android.percent.support.PercentLinearLayout>

    </com.zhy.android.percent.support.PercentLinearLayout>
</com.zhy.android.percent.support.PercentLinearLayout>