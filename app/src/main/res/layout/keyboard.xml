<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:background="@drawable/background_white_3"
        android:orientation="vertical"
        app:layout_heightPercent="85%h"
        app:layout_widthPercent="60%w">

        <!--/第二层-->

        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:orientation="vertical"
            app:layout_heightPercent="90%h"
            app:layout_widthPercent="82%w">
            <!--1-->

            <com.zhy.android.percent.support.PercentLinearLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="horizontal"
                app:layout_heightPercent="18%h"
                app:layout_widthPercent="100%w">
                <!--1.1-->
                <com.zhy.android.percent.support.PercentLinearLayout
                    android:id="@+id/input1"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@drawable/background_white_2"
                    android:orientation="horizontal"
                    app:layout_heightPercent="100%h"
                    app:layout_widthPercent="60%w">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20dp"
                        android:text="公猪ID:"
                        android:textColor="#078d82"
                        android:textSize="30dp" />

                    <TextView
                        android:id="@+id/input"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20dp"
                        android:hint="请输入......"
                        android:textColorHint="#A1A1A1"
                        android:textSize="30dp" />
                    <!--1.1-->
                </com.zhy.android.percent.support.PercentLinearLayout>

                <Button
                    android:id="@+id/out"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:background="@drawable/background_green"
                    android:text="退出"
                    android:textColor="#fff"
                    android:textSize="30dp"
                    app:layout_heightPercent="90%h"
                    app:layout_widthPercent="35%w" />
                <!--1-->
            </com.zhy.android.percent.support.PercentLinearLayout>


            <!--2-->

            <com.zhy.android.percent.support.PercentLinearLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="30dp"
                android:orientation="horizontal"
                app:layout_heightPercent="18%h"
                app:layout_widthPercent="100%w">

                <Button
                    android:id="@+id/bu_1"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@drawable/background_white_3"
                    android:gravity="center"
                    android:text="1"
                    android:textSize="30dp"
                    app:layout_heightPercent="100%h"
                    app:layout_widthPercent="30%w" />

                <Button
                    android:id="@+id/bu_2"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/background_white_3"
                    android:gravity="center"
                    android:text="2"
                    android:textSize="30dp"
                    app:layout_heightPercent="100%h"
                    app:layout_widthPercent="30%w" />

                <Button
                    android:id="@+id/bu_3"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/background_white_3"
                    android:gravity="center"
                    android:text="3"
                    android:textSize="30dp"
                    app:layout_heightPercent="100%h"
                    app:layout_widthPercent="30%w" />
                <!--2-->
            </com.zhy.android.percent.support.PercentLinearLayout>


            <!--3-->

            <com.zhy.android.percent.support.PercentLinearLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                app:layout_heightPercent="18%h"
                app:layout_widthPercent="100%w">

                <Button
                    android:id="@+id/bu_4"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@drawable/background_white_3"
                    android:gravity="center"
                    android:text="4"
                    android:textSize="30dp"
                    app:layout_heightPercent="100%h"
                    app:layout_widthPercent="30%w" />

                <Button
                    android:id="@+id/bu_5"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/background_white_3"
                    android:gravity="center"
                    android:text="5"
                    android:textSize="30dp"
                    app:layout_heightPercent="100%h"
                    app:layout_widthPercent="30%w" />

                <Button
                    android:id="@+id/bu_6"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/background_white_3"
                    android:gravity="center"
                    android:text="6"
                    android:textSize="30dp"
                    app:layout_heightPercent="100%h"
                    app:layout_widthPercent="30%w" />
                <!--3-->
            </com.zhy.android.percent.support.PercentLinearLayout>


            <!--4-->
            <com.zhy.android.percent.support.PercentLinearLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                app:layout_heightPercent="18%h"
                app:layout_widthPercent="100%w">

                <Button
                    android:id="@+id/bu_7"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@drawable/background_white_3"
                    android:gravity="center"
                    android:text="7"
                    android:textSize="30dp"
                    app:layout_heightPercent="100%h"
                    app:layout_widthPercent="30%w" />

                <Button
                    android:id="@+id/bu_8"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/background_white_3"
                    android:gravity="center"
                    android:text="8"
                    android:textSize="30dp"
                    app:layout_heightPercent="100%h"
                    app:layout_widthPercent="30%w" />

                <Button
                    android:id="@+id/bu_9"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/background_white_3"
                    android:gravity="center"
                    android:text="9"
                    android:textSize="30dp"
                    app:layout_heightPercent="100%h"
                    app:layout_widthPercent="30%w" />
                <!--4-->
            </com.zhy.android.percent.support.PercentLinearLayout>


            <!--5-->

            <com.zhy.android.percent.support.PercentLinearLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                app:layout_heightPercent="18%h"
                app:layout_widthPercent="100%w">

                <Button
                    android:id="@+id/delete"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@drawable/background_white_3"
                    android:gravity="center"
                    android:text="删除"
                    android:textSize="30dp"
                    app:layout_heightPercent="100%h"
                    app:layout_widthPercent="30%w" />

                <Button
                    android:id="@+id/bu_0"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/background_white_3"
                    android:gravity="center"
                    android:text="0"
                    android:textSize="30dp"
                    app:layout_heightPercent="100%h"
                    app:layout_widthPercent="30%w" />

                <Button
                    android:id="@+id/bu_w"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/background_white_3"
                    android:gravity="center"
                    android:text="完成"
                    android:textSize="30dp"
                    app:layout_heightPercent="100%h"
                    app:layout_widthPercent="30%w" />
                <!--5-->
            </com.zhy.android.percent.support.PercentLinearLayout>


            <!--第二层-->
        </com.zhy.android.percent.support.PercentLinearLayout>


    </com.zhy.android.percent.support.PercentLinearLayout>
</com.zhy.android.percent.support.PercentLinearLayout>