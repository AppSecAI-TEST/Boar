<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#078e80"
        android:orientation="horizontal"
        app:layout_heightPercent="11%h"
        app:layout_widthPercent="100%w">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="平台温度:"
            android:textColor="#fff"
            app:layout_marginLeftPercent="81%w"
            app:layout_textSizePercent="2.4%w" />

        <TextView
            android:id="@+id/humidity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="7dp"
            android:text="37℃"
            android:textColor="#fff"
            app:layout_textSizePercent="2.4%w" />
    </com.zhy.android.percent.support.PercentLinearLayout>

    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#e0f3f1"
        android:orientation="vertical"
        app:layout_heightPercent="89%h"
        app:layout_marginTopPercent="11%h"
        app:layout_widthPercent="100%w">

        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:background="@drawable/password_manager"
            android:orientation="vertical"
            app:layout_heightPercent="94%h"
            app:layout_widthPercent="94%w">

            <com.zhy.android.percent.support.PercentLinearLayout
                android:id="@+id/one"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:background="@mipmap/password_manager_1"
                android:orientation="horizontal"
                app:layout_heightPercent="9%w"
                app:layout_marginTopPercent="8%w"
                app:layout_widthPercent="46%w">


                <EditText
                    android:id="@+id/input_id"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:hint="请输入密码..."
                    android:textColor="#696969"
                    android:textColorHint="#A9A9A9"
                    app:layout_heightPercent="100%h"
                    app:layout_marginLeftPercent="8%w"
                    app:layout_textSizePercent="6%w"
                    app:layout_widthPercent="72%w" />

                <ImageView
                    android:id="@+id/icon_click"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@mipmap/password_manager_4"
                    app:layout_marginLeftPercent="8%w" />
            </com.zhy.android.percent.support.PercentLinearLayout>

            <com.zhy.android.percent.support.PercentLinearLayout
                android:id="@+id/two"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:background="@mipmap/password_manager_1"
                android:orientation="horizontal"
                app:layout_heightPercent="9%w"
                app:layout_marginTopPercent="2%w"
                app:layout_widthPercent="46%w">

                <EditText
                    android:id="@+id/date"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:hint="请确认密码......"
                    android:textColorHint="#A9A9A9"
                    app:layout_heightPercent="100%h"
                    app:layout_marginLeftPercent="7%w"
                    app:layout_textSizePercent="7%w"
                    app:layout_widthPercent="72%w" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@mipmap/password_manager_4"
                    app:layout_marginLeftPercent="8%w" />

            </com.zhy.android.percent.support.PercentLinearLayout>


            <com.zhy.android.percent.support.PercentLinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                app:layout_heightPercent="10%w"
                app:layout_marginTopPercent="6%w"
                app:layout_widthPercent="46%w">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@mipmap/password_manager_2"
                    android:text="确      认"
                    android:textColor="#fff"
                    app:layout_textSizePercent="5%w" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@mipmap/password_manager_2"
                    android:text="返   回"
                    android:textColor="#fff"
                    app:layout_marginLeftPercent="8%w"
                    app:layout_textSizePercent="5%w" />

            </com.zhy.android.percent.support.PercentLinearLayout>


        </com.zhy.android.percent.support.PercentLinearLayout>

    </com.zhy.android.percent.support.PercentLinearLayout>
</com.zhy.android.percent.support.PercentFrameLayout>