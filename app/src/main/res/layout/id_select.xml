<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#078e80"
        android:orientation="horizontal"
        app:layout_heightPercent="11%h"
        app:layout_widthPercent="100%w">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="平台温度:"
            android:textColor="#fff"
            app:layout_marginLeftPercent="83%w"
            app:layout_textSizePercent="2.4%w" />

        <TextView
            android:id="@+id/humidity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="7dp"
            android:text="37℃"
            android:textColor="#fff"
            app:layout_textSizePercent="2.4%w" />
    </com.zhy.android.percent.support.PercentLinearLayout>

    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#e0f3f1"
        android:orientation="vertical">

        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:background="@drawable/background_white_3"
            android:orientation="vertical"
            app:layout_heightPercent="80%h"
            app:layout_marginTopPercent="4%w"
            app:layout_widthPercent="46%w">

            <com.zhy.android.percent.support.PercentLinearLayout
                android:id="@+id/one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@mipmap/id_select_3"
                android:orientation="horizontal"
                app:layout_heightPercent="22%h"
                app:layout_marginTopPercent="8%w"
                app:layout_widthPercent="78%w">

                <ImageView
                    android:id="@+id/icon_click"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:layout_marginLeftPercent="6%w"
                    android:background="@mipmap/id_select_1" />

                <TextView
                    android:id="@+id/input_id"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:hint="请选择检测员ID!"
                    android:textColor="#696969"
                    android:textColorHint="#A9A9A9"
                    app:layout_marginLeftPercent="8%w"
                    app:layout_heightPercent="30%h"
                    app:layout_textSizePercent="6%w"
                    app:layout_widthPercent="60%w" />
            </com.zhy.android.percent.support.PercentLinearLayout>

            <com.zhy.android.percent.support.PercentLinearLayout
                android:id="@+id/two"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:background="@mipmap/id_select_3"
                android:orientation="horizontal"
                app:layout_heightPercent="22%h"
                app:layout_marginTopPercent="2%w"
                app:layout_widthPercent="78%w">

                <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="2117/05/05   02:15"
                    app:layout_marginLeftPercent="16%w"
                    app:layout_textSizePercent="7%w" />

            </com.zhy.android.percent.support.PercentLinearLayout>

            <Button
                android:id="@+id/affirm"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:background="@mipmap/id_select_4"
                android:text="确      认"
                android:textColor="#fff"
                app:layout_heightPercent="22%h"
                app:layout_marginTopPercent="8%w"
                app:layout_textSizePercent="6%w"
                app:layout_widthPercent="78%w" />


        </com.zhy.android.percent.support.PercentLinearLayout>

    </com.zhy.android.percent.support.PercentLinearLayout>
</com.zhy.android.percent.support.PercentLinearLayout>