<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.zhy.android.percent.support.PercentLinearLayout
        android:id="@+id/percent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#078e80"
            android:orientation="horizontal"
            app:layout_heightPercent="11%h"
            app:layout_widthPercent="100%w">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="窗口选择"
                android:textColor="#fff"
                app:layout_marginLeftPercent="41%w"
                app:layout_textSizePercent="3%w" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="平台温度:"
                android:textColor="#fff"
                android:textSize="25dp"
                app:layout_marginLeftPercent="30%w" />

            <TextView
                android:id="@+id/humidity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="7dp"
                android:text="37℃"
                android:textColor="#fff"
                android:textSize="25dp" />
        </com.zhy.android.percent.support.PercentLinearLayout>
        <!--1.1-->
        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#e0f3f1"
            android:orientation="horizontal">
            <!--2.1-->
            <com.zhy.android.percent.support.PercentLinearLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:orientation="vertical"
                app:layout_heightPercent="90%h"
                app:layout_marginLeftPercent="4.8%w"
                app:layout_widthPercent="90%w">
                <!--2.1-->
                <com.zhy.android.percent.support.PercentLinearLayout
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal"
                    app:layout_heightPercent="19%h"
                    app:layout_marginTopPercent="10%w"
                    app:layout_widthPercent="100%w">
                    <!--2.1-->
                    <com.zhy.android.percent.support.PercentLinearLayout
                        android:id="@+id/windows_1"
                        android:layout_width="529dp"
                        android:layout_height="106dp"
                        android:layout_gravity="center"
                        android:background="@mipmap/n_008"
                        android:orientation="horizontal"
                        app:layout_marginLeftPercent="2%w">

                        <TextView
                            android:id="@+id/text_ws_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="窗口1"
                            android:textSize="35dp"
                            app:layout_marginLeftPercent="46%w" />


                        <!--2.1-->
                    </com.zhy.android.percent.support.PercentLinearLayout>

                    <com.zhy.android.percent.support.PercentLinearLayout
                        android:id="@+id/windows_2"
                        android:layout_width="529dp"
                        android:layout_height="106dp"
                        android:layout_gravity="center"
                        android:background="@mipmap/n_008"
                        android:orientation="horizontal"
                        app:layout_marginLeftPercent="4%w">

                        <TextView
                            android:id="@+id/text_ws_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="窗口2"
                            android:textSize="35dp"
                            app:layout_marginLeftPercent="46%w" />

                        <!--2.1-->
                    </com.zhy.android.percent.support.PercentLinearLayout>
                    <!--2.1-->
                </com.zhy.android.percent.support.PercentLinearLayout>

                <com.zhy.android.percent.support.PercentLinearLayout
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    app:layout_heightPercent="19%h"
                    app:layout_marginTopPercent="2%w"
                    app:layout_widthPercent="100%w">
                    <!--2.1-->
                    <com.zhy.android.percent.support.PercentLinearLayout
                        android:id="@+id/windows_3"
                        android:layout_width="529dp"
                        android:layout_height="106dp"
                        android:layout_gravity="center"
                        android:background="@mipmap/n_008"
                        android:orientation="horizontal"
                        app:layout_marginLeftPercent="2%w">

                        <TextView
                            android:id="@+id/text_ws_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="窗口3"
                            android:textSize="35dp"
                            app:layout_marginLeftPercent="46%w" />

                        <!--2.1-->
                    </com.zhy.android.percent.support.PercentLinearLayout>

                    <com.zhy.android.percent.support.PercentLinearLayout
                        android:id="@+id/windows_4"
                        android:layout_width="529dp"
                        android:layout_height="106dp"
                        android:layout_gravity="center"
                        android:background="@mipmap/n_008"
                        android:orientation="horizontal"
                        app:layout_marginLeftPercent="4%w">

                        <TextView
                            android:id="@+id/text_ws_4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="窗口4"
                            android:textSize="35dp"
                            app:layout_marginLeftPercent="46%w" />
                        <!--2.1-->
                    </com.zhy.android.percent.support.PercentLinearLayout>
                    <!--2.1-->
                </com.zhy.android.percent.support.PercentLinearLayout>


                <Button
                    android:id="@+id/continue_ws"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@mipmap/n_009"
                    android:text="继续"
                    android:textColor="#fff"
                    android:textSize="30dp"
                    app:layout_marginTopPercent="6%w" />


            </com.zhy.android.percent.support.PercentLinearLayout>

            <!--1.1-->
        </com.zhy.android.percent.support.PercentLinearLayout>

    </com.zhy.android.percent.support.PercentLinearLayout>

    <ImageView
        android:id="@+id/icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/a_000"
        app:layout_marginLeftPercent="4%w"
        app:layout_marginTopPercent="1%w" />
</com.zhy.android.percent.support.PercentFrameLayout>