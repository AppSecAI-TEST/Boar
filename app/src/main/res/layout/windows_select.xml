<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.zhy.android.percent.support.PercentLinearLayout
        android:id="@+id/percent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#078e80"
            android:orientation="horizontal"
            app:layout_heightPercent="11%h"
            app:layout_widthPercent="100%w">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="窗口选择"
                android:textColor="#fff"
                app:layout_marginLeftPercent="41%w"
                app:layout_textSizePercent="3%w" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="平台温度:"
                android:textColor="#fff"
                android:textSize="25dp"
                app:layout_marginLeftPercent="30%w" />

            <TextView
                android:id="@+id/humidity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="7dp"
                android:text="37℃"
                android:textColor="#fff"
                android:textSize="25dp" />
        </com.zhy.android.percent.support.PercentLinearLayout>

        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.zhy.android.percent.support.PercentLinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/window_select_3"
                android:orientation="horizontal"
                app:layout_marginLeftPercent="14%w"
                app:layout_marginTopPercent="7%w">

                <Button
                    android:id="@+id/win_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@mipmap/window_select_1"
                    app:layout_marginLeftPercent="13.5%w" />

                <Button
                    android:id="@+id/win_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@mipmap/window_select_1"
                    app:layout_marginLeftPercent="1%w" />

                <Button
                    android:id="@+id/win_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@mipmap/window_select_1"
                    app:layout_marginLeftPercent="1%w" />

                <Button
                    android:id="@+id/win_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@mipmap/window_select_1"
                    app:layout_marginLeftPercent="1%w" />
            </com.zhy.android.percent.support.PercentLinearLayout>

            <com.zhy.android.percent.support.PercentLinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_marginLeftPercent="14%w"
                app:layout_marginTopPercent="2%w">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@mipmap/window_select_4"
                    android:text="进仓"
                    android:textColor="#fff"
                    app:layout_textSizePercent="3%w" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@mipmap/window_select_4"
                    android:text="出仓"
                    android:textColor="#fff"
                    app:layout_marginLeftPercent="1%w"
                    app:layout_textSizePercent="3%w" />

                <Button
                    android:id="@+id/continue_ws"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@mipmap/window_select_4"
                    android:text="继续"
                    android:textColor="#fff"
                    app:layout_marginLeftPercent="8%w"
                    app:layout_textSizePercent="3%w" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@mipmap/window_select_4"
                    android:text="返回"
                    android:textColor="#fff"
                    app:layout_marginLeftPercent="1%w"
                    app:layout_textSizePercent="3%w" />
            </com.zhy.android.percent.support.PercentLinearLayout>

        </com.zhy.android.percent.support.PercentLinearLayout>

    </com.zhy.android.percent.support.PercentLinearLayout>

    <ImageView
        android:id="@+id/icon_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/home"
        app:layout_marginLeftPercent="2%w"
        app:layout_marginTopPercent="1%w" />
</com.zhy.android.percent.support.PercentFrameLayout>