<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#078e80"
            android:orientation="horizontal"
            app:layout_heightPercent="11%h"
            app:layout_widthPercent="100%w">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:layout_marginLeftPercent="41%w"
                android:text="系统参数"
                android:textColor="#fff"
                android:textSize="40dp" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:layout_marginLeftPercent="30%w"
                android:text="平台温度:"
                android:textColor="#fff"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/humidity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="7dp"
                android:text="37℃"
                android:textColor="#fff"
                android:textSize="25dp" />
        </com.zhy.android.percent.support.PercentLinearLayout>
        <!--1.1-->
        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#e0f3f1"
            android:orientation="horizontal">
            <!--2.1-->
            <com.zhy.android.percent.support.PercentLinearLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_gravity="center"
                app:layout_marginLeftPercent="5%w"
                android:orientation="vertical"
                app:layout_heightPercent="90%h"
                app:layout_widthPercent="90%w">
                <!--2.1-->
                <com.zhy.android.percent.support.PercentLinearLayout
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_gravity="center_horizontal"
                    app:layout_marginTopPercent="6%w"
                    android:orientation="horizontal"
                    app:layout_heightPercent="19%h"
                    app:layout_widthPercent="90%w">
                    <!--2.1-->
                    <com.zhy.android.percent.support.PercentLinearLayout
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/background_white_6"
                        android:orientation="horizontal"
                        app:layout_heightPercent="100%h"
                        app:layout_widthPercent="42%w">

                        <com.zhy.android.percent.support.PercentLinearLayout
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/background_green_1"
                            android:orientation="horizontal"
                            app:layout_heightPercent="100%h"
                            app:layout_widthPercent="30%w">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="35dp"
                                android:src="@drawable/a_006" />
                        </com.zhy.android.percent.support.PercentLinearLayout>

                        <View
                            android:layout_width="2dp"
                            android:layout_height="match_parent"
                            android:background="#A9A9A9" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="30dp"
                            android:text="系统时间"
                            android:textColor="#078d82"
                            android:textSize="35dp" />
                        <!--2.1-->
                    </com.zhy.android.percent.support.PercentLinearLayout>

                    <com.zhy.android.percent.support.PercentLinearLayout
                        android:id="@+id/wifi"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_gravity="center_horizontal"
                        app:layout_marginLeftPercent="14%w"
                        android:background="@drawable/background_white_6"
                        android:orientation="horizontal"
                        app:layout_heightPercent="100%h"
                        app:layout_widthPercent="42%w">

                        <com.zhy.android.percent.support.PercentLinearLayout
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/background_green_1"
                            android:orientation="horizontal"
                            app:layout_heightPercent="100%h"
                            app:layout_widthPercent="30%w">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="32dp"
                                android:src="@drawable/a_008" />
                        </com.zhy.android.percent.support.PercentLinearLayout>

                        <View
                            android:layout_width="2dp"
                            android:layout_height="match_parent"
                            android:background="#A9A9A9" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="30dp"
                            android:text="WIFI设置"
                            android:textColor="#078d82"
                            android:textSize="35dp" />
                        <!--2.1-->
                    </com.zhy.android.percent.support.PercentLinearLayout>
                    <!--2.1-->
                </com.zhy.android.percent.support.PercentLinearLayout>

                <com.zhy.android.percent.support.PercentLinearLayout
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="65dp"
                    android:orientation="horizontal"
                    app:layout_heightPercent="19%h"
                    app:layout_widthPercent="90%w">
                    <!--2.1-->
                    <com.zhy.android.percent.support.PercentLinearLayout
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/background_white_6"
                        android:orientation="horizontal"
                        app:layout_heightPercent="100%h"
                        app:layout_widthPercent="42%w">

                        <com.zhy.android.percent.support.PercentLinearLayout
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/background_green_1"
                            android:orientation="horizontal"
                            app:layout_heightPercent="100%h"
                            app:layout_widthPercent="30%w">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="42dp"
                                android:src="@drawable/a_007" />
                        </com.zhy.android.percent.support.PercentLinearLayout>

                        <View
                            android:layout_width="2dp"
                            android:layout_height="match_parent"
                            android:background="#A9A9A9" />

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="30dp"
                            android:text="管理员设置"
                            android:textColor="#078d82"
                            android:textSize="35dp" />
                        <!--2.1-->
                    </com.zhy.android.percent.support.PercentLinearLayout>

                    <com.zhy.android.percent.support.PercentLinearLayout
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_gravity="center_horizontal"
                        app:layout_marginLeftPercent="14%w"
                        android:background="@drawable/background_white_6"
                        android:orientation="horizontal"
                        app:layout_heightPercent="100%h"
                        app:layout_widthPercent="42%w">

                        <com.zhy.android.percent.support.PercentLinearLayout
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/background_green_1"
                            android:orientation="horizontal"
                            app:layout_heightPercent="100%h"
                            app:layout_widthPercent="30%w">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="37dp"
                                android:src="@drawable/a_005" />
                        </com.zhy.android.percent.support.PercentLinearLayout>

                        <View
                            android:layout_width="2dp"
                            android:layout_height="match_parent"
                            android:background="#A9A9A9" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="55dp"
                            android:text="关  于"
                            android:textColor="#078d82"
                            android:textSize="35dp" />
                        <!--2.1-->
                    </com.zhy.android.percent.support.PercentLinearLayout>
                    <!--2.1-->
                </com.zhy.android.percent.support.PercentLinearLayout>

                <Button
                    android:id="@+id/bu_return"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:layout_marginTopPercent="6%w"
                    android:background="@drawable/a_017"
                    android:text="返回"
                    android:textColor="#fff"
                    android:textSize="35dp" />
                <!--2.1-->
            </com.zhy.android.percent.support.PercentLinearLayout>

            <!--1.1-->
        </com.zhy.android.percent.support.PercentLinearLayout>

    </com.zhy.android.percent.support.PercentLinearLayout>

    <ImageView
        android:id="@+id/icon_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_marginLeftPercent="4%w"
        app:layout_marginTopPercent="1%w"
        android:src="@drawable/a_000" />
</com.zhy.android.percent.support.PercentFrameLayout>

