<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#078e80"
            android:orientation="horizontal"
            app:layout_heightPercent="11%h"
            app:layout_widthPercent="100%w">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="设    置"
                android:textColor="#fff"
                app:layout_marginLeftPercent="44%"
                app:layout_textSizePercent="3.2%w" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="375dp"
                android:text="平台温度:"
                android:textColor="#fff"
                app:layout_marginLeftPercent="28%"
                app:layout_textSizePercent="2.6%w" />

            <TextView
                android:id="@+id/humidity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="37℃"
                android:textColor="#fff"
                app:layout_marginLeftPercent="1%"
                app:layout_textSizePercent="2.6%w" />
        </com.zhy.android.percent.support.PercentLinearLayout>

        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#e0f3f1"
            android:orientation="horizontal"
            app:layout_heightPercent="89%h"
            app:layout_widthPercent="100%w">

            <com.zhy.android.percent.support.PercentFrameLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="150dp"
                android:background="#e0f3f1"
                app:layout_heightPercent="20%h"
                app:layout_widthPercent="100%w">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="65dp"
                    android:text="0%"
                    android:textColor="#63cbb1"
                    android:textSize="30dp" />

                <com.join.brightnessLibrary.BubbleSeekBar
                    android:id="@+id/bar"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginLeft="80dp"
                    android:layout_marginTop="5dp"
                    app:bsb_max="100"
                    app:bsb_min="0"
                    app:bsb_progress="50"
                    app:bsb_second_track_color="@color/color_blue"
                    app:bsb_track_color="@color/black"
                    app:bsb_track_size="19dp"
                    app:layout_heightPercent="10%h"
                    app:layout_widthPercent="80%w" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="890dp"
                    android:text="100%"
                    android:textColor="#63cbb1"
                    android:textSize="30dp" />

            </com.zhy.android.percent.support.PercentFrameLayout>
        </com.zhy.android.percent.support.PercentLinearLayout>
    </com.zhy.android.percent.support.PercentLinearLayout>

    <ImageView
        android:id="@+id/icon_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/home"
        app:layout_marginLeftPercent="2%w"
        app:layout_marginTopPercent="1%w" />
</com.zhy.android.percent.support.PercentFrameLayout>