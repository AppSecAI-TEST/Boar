<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#078e80"
        android:orientation="horizontal"
        app:layout_heightPercent="11%h"
        app:layout_widthPercent="100%w">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="820dp"
            android:text="平台温度:"
            android:textColor="#fff"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="7dp"
            android:text="27℃"
            android:textColor="#fff"
            android:textSize="20dp" />
    </com.zhy.android.percent.support.PercentLinearLayout>

    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#e0f3f1"
        android:orientation="horizontal">

        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_marginLeft="45dp"
            android:background="@drawable/background_1"
            android:orientation="vertical"
            app:layout_heightPercent="45%h"
            app:layout_widthPercent="20%w">

            <com.zhy.android.percent.support.PercentLinearLayout
                android:id="@+id/function_1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:orientation="vertical"
                app:layout_heightPercent="60%h"
                app:layout_widthPercent="100%w">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="22dp"
                    android:src="@drawable/aa_34" />
            </com.zhy.android.percent.support.PercentLinearLayout>

            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="#4bd0bf"
                android:gravity="center"
                android:text="精液原液检测"
                android:textSize="20dp"
                app:layout_heightPercent="40%h"
                app:layout_widthPercent="100%w" />


        </com.zhy.android.percent.support.PercentLinearLayout>

        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_marginLeft="35dp"
            android:background="@drawable/background_1"
            android:orientation="vertical"
            app:layout_heightPercent="45%h"
            app:layout_widthPercent="20%w">

            <com.zhy.android.percent.support.PercentLinearLayout
                android:id="@+id/function_2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:orientation="vertical"
                app:layout_heightPercent="60%h"
                app:layout_widthPercent="100%w">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="22dp"
                    android:src="@drawable/aa_28" />
            </com.zhy.android.percent.support.PercentLinearLayout>

            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="#4bd0bf"
                android:gravity="center"
                android:text="稀释精液检测"
                android:textSize="20dp"
                app:layout_heightPercent="40%h"
                app:layout_widthPercent="100%w" />

        </com.zhy.android.percent.support.PercentLinearLayout>

        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_marginLeft="35dp"
            android:background="@drawable/background_1"
            android:orientation="vertical"
            app:layout_heightPercent="45%h"
            app:layout_widthPercent="20%w">

            <com.zhy.android.percent.support.PercentLinearLayout
                android:id="@+id/function_3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:orientation="vertical"
                app:layout_heightPercent="60%h"
                app:layout_widthPercent="100%w">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="22dp"
                    android:src="@drawable/aa_31" />
            </com.zhy.android.percent.support.PercentLinearLayout>

            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="#4bd0bf"
                android:gravity="center"
                android:text="数据查询"
                android:textSize="20dp"
                app:layout_heightPercent="40%h"
                app:layout_widthPercent="100%w" />

        </com.zhy.android.percent.support.PercentLinearLayout>

        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_marginLeft="35dp"
            android:background="@drawable/background_1"
            android:orientation="vertical"
            app:layout_heightPercent="45%h"
            app:layout_widthPercent="20%w">

            <com.zhy.android.percent.support.PercentLinearLayout
                android:id="@+id/function_4"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:orientation="vertical"
                app:layout_heightPercent="60%h"
                app:layout_widthPercent="100%w">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="22dp"
                    android:src="@drawable/aa_37" />
            </com.zhy.android.percent.support.PercentLinearLayout>

            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="#4bd0bf"
                android:gravity="center"
                android:text="设置"
                android:textSize="20dp"
                app:layout_heightPercent="40%h"
                app:layout_widthPercent="100%w" />
        </com.zhy.android.percent.support.PercentLinearLayout>

    </com.zhy.android.percent.support.PercentLinearLayout>


</com.zhy.android.percent.support.PercentLinearLayout>

