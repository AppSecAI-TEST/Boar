<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#078e80"
        android:orientation="horizontal"
        app:layout_heightPercent="11%h"
        app:layout_widthPercent="100%w">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="平台温度:"
            android:textColor="#fff"
            app:layout_marginLeftPercent="80%w"
            app:layout_textSizePercent="2.6%w" />

        <TextView
            android:id="@+id/humidity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="37℃"
            android:textColor="#fff"
            app:layout_marginLeftPercent="1%w"
            app:layout_textSizePercent="2.6%w" />
    </com.zhy.android.percent.support.PercentLinearLayout>

    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#e0f3f1"
        android:orientation="horizontal">

        <com.zhy.android.percent.support.PercentLinearLayout
            android:id="@+id/function_1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:background="@mipmap/function_1"
            android:orientation="vertical"
            app:layout_heightPercent="16%w"
            app:layout_marginLeftPercent="16%w"
            app:layout_widthPercent="15%w">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="精液原液检测"
                app:layout_marginTopPercent="70%w"
                app:layout_textSizePercent="12%w" />


        </com.zhy.android.percent.support.PercentLinearLayout>

        <com.zhy.android.percent.support.PercentLinearLayout
            android:id="@+id/function_2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:background="@mipmap/function_2"
            android:orientation="vertical"
            app:layout_heightPercent="16%w"
            app:layout_marginLeftPercent="3%w"
            app:layout_widthPercent="15%w">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="稀释精液检测"
                app:layout_marginTopPercent="70%w"
                app:layout_textSizePercent="12%w" />

        </com.zhy.android.percent.support.PercentLinearLayout>

        <com.zhy.android.percent.support.PercentLinearLayout
            android:id="@+id/function_3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:background="@mipmap/function_3"
            android:orientation="vertical"
            app:layout_heightPercent="16%w"
            app:layout_marginLeftPercent="3%w"
            app:layout_widthPercent="15%w">


            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="数据查询"
                app:layout_marginTopPercent="70%w"
                app:layout_textSizePercent="12%w" />

        </com.zhy.android.percent.support.PercentLinearLayout>

        <com.zhy.android.percent.support.PercentLinearLayout
            android:id="@+id/function_4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:background="@mipmap/function_4"
            android:orientation="vertical"
            app:layout_heightPercent="16%w"
            app:layout_marginLeftPercent="3%w"
            app:layout_widthPercent="15%w">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="设  置"
                app:layout_marginTopPercent="70%w"
                app:layout_textSizePercent="12%w" />
        </com.zhy.android.percent.support.PercentLinearLayout>

    </com.zhy.android.percent.support.PercentLinearLayout>


</com.zhy.android.percent.support.PercentLinearLayout>

