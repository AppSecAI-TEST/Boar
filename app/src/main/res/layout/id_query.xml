<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.zhy.android.percent.support.PercentLinearLayout
        android:id="@+id/percent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#078e80"
            android:orientation="horizontal"
            app:layout_heightPercent="11%h"
            app:layout_widthPercent="100%w">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="按公猪ID/批号ID"
                android:textColor="#fff"
                app:layout_marginLeftPercent="38%w"
                app:layout_textSizePercent="3%w" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="平台温度:"
                android:textColor="#fff"
                app:layout_marginLeftPercent="20%w"
                app:layout_textSizePercent="2.6%w" />

            <TextView
                android:id="@+id/humidity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="37℃"
                android:textColor="#fff"
                app:layout_marginLeftPercent="1%w"
                app:layout_textSizePercent="2.6%w" />
        </com.zhy.android.percent.support.PercentLinearLayout>


        <!--2.1-->
        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:background="#fff"
            android:orientation="vertical"
            app:layout_heightPercent="89%h"
            app:layout_widthPercent="100%w">
            <!--2.2.1-->
            <com.zhy.android.percent.support.PercentLinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_marginLeftPercent="1%w"
                app:layout_marginTopPercent="4%w">

                <com.zhy.android.percent.support.PercentLinearLayout
                    android:id="@+id/ll_Gong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/id_query_1"
                    android:orientation="horizontal"
                    app:layout_marginLeftPercent="3%w"
                    app:layout_marginTopPercent="1%w">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="ID:"
                        app:layout_marginLeftPercent="4%w"
                        app:layout_textSizePercent="3%w" />

                    <TextView
                        android:id="@+id/get_data"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center_vertical"
                        android:text="12345"
                        android:textColor="#078d82"
                        app:layout_marginLeftPercent="10%w"
                        app:layout_textSizePercent="3%w" />

                </com.zhy.android.percent.support.PercentLinearLayout>


                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@mipmap/id_query_2"
                    android:text="数据导出"
                    android:textColor="#f4f4f4"
                    app:layout_marginLeftPercent="18%w"
                    app:layout_textSizePercent="2.6%w" />

                <Button
                    android:id="@+id/bu_return"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@mipmap/id_query_2"
                    android:text="返回"
                    android:textColor="#f4f4f4"
                    app:layout_marginLeftPercent="4%w"
                    app:layout_textSizePercent="2.6%w" />

                <!--2.2.1-->
            </com.zhy.android.percent.support.PercentLinearLayout>
            <!--2.3.1-->
            <com.zhy.android.percent.support.PercentLinearLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/background_white_3"
                android:orientation="vertical"
                app:layout_heightPercent="62%h"
                app:layout_marginLeftPercent="2%w"
                app:layout_marginTopPercent="4%w"
                app:layout_widthPercent="97%w">

                <com.zhy.android.percent.support.PercentLinearLayout
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="#daeeed"
                    android:orientation="horizontal"
                    app:layout_heightPercent="24%h"
                    app:layout_widthPercent="100%w">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:gravity="center"
                        android:text="日期"
                        android:textColor="#089285"
                        app:layout_heightPercent="100%h"
                        app:layout_textSizePercent="3%w"
                        app:layout_widthPercent="15%w" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="95dp"
                        android:background="#089285" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:gravity="center"
                        android:text="时间"
                        android:textColor="#089285"
                        app:layout_heightPercent="100%h"
                        app:layout_textSizePercent="3%w"
                        app:layout_widthPercent="11%w" />


                    <View
                        android:layout_width="1dp"
                        android:layout_height="95dp"
                        android:background="#089285" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:gravity="center"
                        android:text="类型"
                        android:textColor="#089285"
                        app:layout_heightPercent="100%h"
                        app:layout_textSizePercent="3%w"
                        app:layout_widthPercent="12%w" />


                    <View
                        android:layout_width="1dp"
                        android:layout_height="95dp"
                        android:background="#089285" />

                    <com.zhy.android.percent.support.PercentLinearLayout
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:orientation="vertical"
                        app:layout_heightPercent="100%h"
                        app:layout_widthPercent="12%w">

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="密度"
                            android:textColor="#089285"
                            app:layout_marginTopPercent="14%w"
                            app:layout_textSizePercent="24%w" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="(亿/毫升)"
                            android:textColor="#089285"
                            app:layout_textSizePercent="12%w" />
                    </com.zhy.android.percent.support.PercentLinearLayout>


                    <View
                        android:layout_width="1dp"
                        android:layout_height="95dp"
                        android:background="#089285" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:gravity="center"
                        android:text="活力"
                        android:textColor="#089285"
                        app:layout_heightPercent="100%h"
                        app:layout_textSizePercent="3%w"
                        app:layout_widthPercent="10%w" />


                    <View
                        android:layout_width="1dp"
                        android:layout_height="95dp"
                        android:background="#089285" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:gravity="center"
                        android:text="活率"
                        android:textColor="#089285"
                        app:layout_heightPercent="100%h"
                        app:layout_textSizePercent="3%w"
                        app:layout_widthPercent="10%w" />


                    <View
                        android:layout_width="1dp"
                        android:layout_height="95dp"
                        android:background="#089285" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:gravity="center"
                        android:text="操作员"
                        android:textColor="#089285"
                        app:layout_heightPercent="100%h"
                        app:layout_textSizePercent="3%w"
                        app:layout_widthPercent="10%w" />


                    <View
                        android:layout_width="1dp"
                        android:layout_height="95dp"
                        android:background="#089285" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:gravity="center"
                        android:paddingLeft="10dp"
                        android:text="结果"
                        android:textColor="#089285"
                        app:layout_heightPercent="100%h"
                        app:layout_textSizePercent="3%w"
                        app:layout_widthPercent="10%w" />


                    <View
                        android:layout_width="1dp"
                        android:layout_height="95dp"
                        android:background="#089285" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:gravity="center"
                        android:paddingLeft="10dp"
                        android:text=""
                        android:textColor="#089285"
                        app:layout_heightPercent="100%h"
                        app:layout_textSizePercent="3%w"
                        app:layout_widthPercent="10%w" />


                </com.zhy.android.percent.support.PercentLinearLayout>

                <ListView
                    android:id="@+id/lv_content"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_heightPercent="76%h"
                    app:layout_widthPercent="100%w" />


                <!--2.3.1-->
            </com.zhy.android.percent.support.PercentLinearLayout>


            <!--1.1-->
        </com.zhy.android.percent.support.PercentLinearLayout>

    </com.zhy.android.percent.support.PercentLinearLayout>

    <ImageView
        android:id="@+id/icon_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/home"
        app:layout_marginLeftPercent="2%w"
        app:layout_marginTopPercent="1%w" />
</com.zhy.android.percent.support.PercentFrameLayout>

